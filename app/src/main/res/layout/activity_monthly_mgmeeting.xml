                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@id/monthly_meeting_mother_group"
                                android:id="@+id/spinner_monthly_meeting_mother_group" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <!--Discussed Topic-->
