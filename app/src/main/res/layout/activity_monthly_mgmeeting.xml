                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:paddingLeft="5dp"
                                android:text="NO. OF PARTICIPANTS"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/monsoon"
                                android:id="@+id/monthly_meeting_participants_lbl" />

                            <!--pregnent Old/New participants -->
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                card_view:cardBackgroundColor="@color/transparent"
                                card_view:cardElevation="1dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:paddingLeft="5dp"
                                        android:text="Pregnent Women"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@color/monsoon"
                                        android:id="@+id/monthly_meeting_pregnent_participants_lbl" />

                                    <!--OLD-->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:padding="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="5dp"
                                            android:text="Old"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/monsoon"
                                            android:id="@+id/monthly_meeting_pregment_old_lbl" />

                                        <EditText
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentTop="true"
                                            android:inputType="number"
                                            android:id="@+id/monthly_meeting_pregnent_old_number" />
                                    </RelativeLayout>
                                    <!--New -->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginTop="@dimen/layout_margin"
                                        android:padding="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="5dp"
                                            android:text="New"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/monsoon"
                                            android:id="@+id/monthly_meeting_pregnent_new_lbl" />

                                        <EditText
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentTop="true"
                                            android:inputType="number"
                                            android:id="@+id/monthly_meeting_pregnent_new_number" />

                                    </RelativeLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <!--lactating Old/New participants -->
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                card_view:cardBackgroundColor="@color/transparent"
                                card_view:cardElevation="1dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:paddingLeft="5dp"
                                        android:text="Lactating Women"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@color/monsoon"
                                        android:id="@+id/monthly_meeting_lctating_participants_lbl" />

                                    <!--OLD-->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:padding="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="5dp"
                                            android:text="Old"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/monsoon"
                                            android:id="@+id/monthly_meeting_lactating_old_lbl" />

                                        <EditText
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentTop="true"
                                            android:inputType="number"
                                            android:id="@+id/monthly_meeting_lactating_old_number" />
                                    </RelativeLayout>
                                    <!--New -->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginTop="@dimen/layout_margin"
                                        android:padding="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="5dp"
                                            android:text="New"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/monsoon"
                                            android:id="@+id/monthly_meeting_lactating_new_lbl" />

                                        <EditText
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentTop="true"
                                            android:inputType="number"
                                            android:id="@+id/monthly_meeting_lactating_new_number" />

                                    </RelativeLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <!--mother with u2 children Old/New participants -->
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                card_view:cardBackgroundColor="@color/transparent"
                                card_view:cardElevation="1dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:paddingLeft="5dp"
                                        android:text="Mother With U2 Children"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@color/monsoon"
                                        android:id="@+id/monthly_meeting_mother_with_u2child_participants_lbl" />

                                    <!--OLD-->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:padding="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="5dp"
                                            android:text="Old"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/monsoon"
                                            android:id="@+id/monthly_meeting_mother_with_u2child_old_lbl" />

                                        <EditText
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentTop="true"
                                            android:inputType="number"
                                            android:id="@+id/monthly_meeting_mother_with_u2child_old_number" />
                                    </RelativeLayout>
                                    <!--New -->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginTop="@dimen/layout_margin"
                                        android:padding="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="5dp"
                                            android:text="New"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/monsoon"
                                            android:id="@+id/monthly_meeting_mother_with_u2child_new_lbl" />

                                        <EditText
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentTop="true"
                                            android:inputType="number"
                                            android:id="@+id/monthly_meeting_mother_with_u2child_new_number" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <!--mother with u5 children Old/New participants -->
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                card_view:cardBackgroundColor="@color/transparent"
                                card_view:cardElevation="1dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:paddingLeft="5dp"
                                        android:text="Mother With U5 Children"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@color/monsoon"
                                        android:id="@+id/monthly_meeting_mother_with_u5child_participants_lbl" />

                                    <!--OLD-->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:padding="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="5dp"
                                            android:text="Old"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/monsoon"
                                            android:id="@+id/monthly_meeting_mother_with_u5child_old_lbl" />

                                        <EditText
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentTop="true"
                                            android:inputType="number"
                                            android:id="@+id/monthly_meeting_mother_with_u5child_old_number" />
                                    </RelativeLayout>
                                    <!--New -->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginTop="@dimen/layout_margin"
                                        android:padding="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="5dp"
                                            android:text="New"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/monsoon"
                                            android:id="@+id/monthly_meeting_mother_with_u5child_new_lbl" />

                                        <EditText
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentTop="true"
                                            android:inputType="number"
                                            android:id="@+id/monthly_meeting_mother_with_u5child_new_number" />

                                    </RelativeLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <!--Total Participnts-->
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp">

                                <AutoCompleteTextView
                                    android:id="@+id/monthly_meeting_total_paticipants"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Total Participants"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:focusable="false"/>
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>



                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--name of SM-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp">

                <AutoCompleteTextView
                    android:id="@+id/monthly_meeting_sm_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:hint="Name of SM"
                    android:inputType="text"
                    android:textColor="@color/black" />
            </android.support.design.widget.TextInputLayout>



            <!--save / send-->
            <android.support.v7.widget.CardView
                android:id="@+id/cv_SaveSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="@color/transparent"
                card_view:cardElevation="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/layout_margin"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/monthly_meeting_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/button_pressed_hwc_light"
                        android:text="Save"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/monthly_meeting_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_pressed_hwc_light"
                        android:text="Send"
                        android:textColor="#FFFFFF" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
