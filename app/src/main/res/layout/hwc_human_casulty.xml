<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animationCache="true"
        android:layout_margin="@dimen/layout_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/children_five_suffered_diarrhoea"
                    android:text="suffered diarrhoea"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/children_five_treated_with_zinc"
                    android:text="treated with Zinc and ORS"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/children_five_diarrhoea_referred_by_sm"
                    android:text="referred by SM "
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                />



            </RelativeLayout>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Done"
                android:layout_gravity="center_horizontal"
                android:id="@+id/done"
                android:textColor="@color/nliveo_white"
                android:background="@color/primary"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>